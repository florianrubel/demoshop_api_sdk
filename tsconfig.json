{
    "compilerOptions": {
        "baseUrl": ".", // Base path for resolution
        "paths": {
            "~api/*": [
                "src/*"
            ],
            "~eslintRulesets/*": [
                "src/sharedLib/eslintRulesets/*"
            ],
        },
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "esModuleInterop": true,
        "composite": true,
        "verbatimModuleSyntax" : true
    },
    "include": [
        "eslint.config.js",
        "vitest.config.ts",
        "src/**/*",
        "tests/**/*",
        "globals.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}